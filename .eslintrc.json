{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "vue/multi-word-component-names": "off",
    "vue/no-v-html": "warn",
    "no-console": "warn",
    "no-debugger": "error",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
  }
}
